{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Conditions": {
    "SetPrettyName": {
      "Fn::Not": [
        { "Fn::Equals": [ { "Ref": "ProxyPrettyName" }, "" ] }
      ]
    },
    "EnableSshPassthru": {
      "Fn::Not": [
        { "Fn::Equals": [ { "Ref": "JenkinsPassesSsh" }, "" ] }
      ]
    }
  },
  "Description": "Template for creating a public ELB for users to connect through which to connect to the Jenkins service.",
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Parameters": [
            "JenkinsInstanceId",
            "ProxyPrettyName",
            "HaSubnets",
            "SecurityGroupIds",
            "JenkinsListenPort",
            "JenkinsServicePort",
            "JenkinsAgentPort",
            "JenkinsListenerCert",
            "JenkinsPassesSsh",
            "BackendTimeout"
          ]
        }
      ]
    }
  },
  "Outputs": {
    "JenkinsElbFqdn": {
      "Description": "Jenkins front-end's IP address",
      "Export": {
        "Name" : { "Fn::Sub": "${AWS::StackName}-ElbDnsName" }
      },
      "Value": { "Fn::GetAtt": [ "JenkinsPubElb", "DNSName" ] }
    },
    "JenkinsElbRawUrl": {
      "Description": "Raw URL of the ELB fronting the Jenkin service.",
      "Export": {
        "Name" : { "Fn::Sub": "${AWS::StackName}-ElbRawUrl" }
      },
      "Value": {
        "Fn::Join": [
          "",
          [
            "https://",
            { "Fn::GetAtt": [ "JenkinsPubElb", "DNSName" ] }
          ]
        ]
      }
    }
  },
  "Parameters": {
    "BackendTimeout": {
      "Default": "600",
      "Description": "How long - in seconds - back-end connection may be idle before attempting session-cleanup",
      "MinValue": "60",
      "MaxValue": "3600",
      "Type": "Number"
    },
    "JenkinsAgentPort": {
      "Description": "TCP Port number that the Jenkins agent-hosts connect through.",
      "MaxValue": "65535",
      "MinValue": "1025",
      "Type": "Number"
    },
    "JenkinsListenerCert": {
      "Default": "",
      "Description": "Name/ID of the ACM-managed SSL Certificate to protect public listener.",
      "Type": "String"
    },
    "JenkinsListenPort": {
      "Default": "443",
      "Description": "TCP Port number on which the Jenkins ELB listens for requests.",
      "MaxValue": "65535",
      "MinValue": "1",
      "Type": "Number"
    },
    "JenkinsServicePort": {
      "Default": "8080",
      "Description": "TCP Port number that the Jenkins host listens to.",
      "MaxValue": "65535",
      "MinValue": "1025",
      "Type": "Number"
    },
    "JenkinsPassesSsh": {
      "AllowedValues": [
        "false",
        "true"
      ],
      "Default": "false",
      "Description": "Whether to allow SSH passthrough to Jenkins master.",
      "Type": "String"
    },
    "HaSubnets": {
      "Description": "Select three subnets - each from different Availability Zones.",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "JenkinsInstanceId": {
      "Description": "ID of the EC2-instance this template should create a proxy for.",
      "Type": "String"
    },
    "ProxyPrettyName": {
      "Description": "A short, human-friendly label to assign to the ELB (no capital letters).",
      "Type": "String"
    },
    "SecurityGroupIds": {
      "Description": "List of security groups to apply to the ELB.",
      "Type": "List<AWS::EC2::SecurityGroup::Id>"
    }
  },
  "Resources": {
    "JenkinsPubElb": {
      "Metadata": {},
      "Properties": {
        "ConnectionSettings": {
          "IdleTimeout": { "Ref": "BackendTimeout" }
        },
        "CrossZone": "true",
        "HealthCheck": {
          "HealthyThreshold": "5",
          "Interval": "30",
          "Target": {
            "Fn::Join": [
              "",
              [
                "HTTP:",
                { "Ref": "JenkinsServicePort" },
                "/login"
              ]
            ]
          },
          "Timeout": "5",
          "UnhealthyThreshold": "2"
        },
        "Instances": [ { "Ref": "JenkinsInstanceId" } ],
        "Listeners": [
          {
            "InstancePort": { "Ref": "JenkinsAgentPort" },
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": { "Ref": "JenkinsAgentPort" },
            "Protocol": "TCP"
          },
          {
            "Fn::If": [
              "EnableSshPassthru",
              {
                "InstancePort": "22",
                "InstanceProtocol": "TCP",
                "LoadBalancerPort": "22",
                "Protocol": "TCP"
              },
              { "Ref": "AWS::NoValue" }
            ]
          },
          {
            "InstancePort": { "Ref": "JenkinsServicePort" },
            "InstanceProtocol": "HTTP",
            "LoadBalancerPort": { "Ref": "JenkinsListenPort" },
            "Protocol": "HTTPS",
            "SSLCertificateId": {
              "Fn::Join": [
                ":",
                [
                  "arn:aws:acm",
                  { "Ref" : "AWS::Region" },
                  { "Ref" : "AWS::AccountId" },
                  { "Fn::Join": [
                      "",
                      [
                        "certificate/",
                        { "Ref": "JenkinsListenerCert" }
                      ]
                    ]
                  }
                ]
              ]
            }
          }
        ],
        "LoadBalancerName": {
          "Fn::If": [
            "SetPrettyName",
            { "Ref": "ProxyPrettyName" },
            { "Ref": "AWS::NoValue" }
          ]
        },
        "Scheme": "internet-facing",
        "SecurityGroups": { "Ref": "SecurityGroupIds" },
        "Subnets": { "Ref": "HaSubnets" },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Jenkins front-end ELB"
          }
        ]
      },
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer"
    }
  }
}
